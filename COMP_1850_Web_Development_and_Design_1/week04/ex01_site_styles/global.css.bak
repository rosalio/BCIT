/* html rules
----------------------------*/

body {
	margin: 0;
	background-color: white;
	color: #333;
	font-family: arial,helvetica,sans-serif;
	}

h1 {
	background-color: #ddd;
	padding-top: 20px;
	padding-left: 10px;
	}

h2 {
	background-color: #444;
	color: #ddd;
	margin-top: 30px;
	background-image: url(images/wwbullet.png);
	background-repeat: no-repeat;
	padding-left: 30px;
	}

img {
	border: 0;
	}

a:link {
	color: #c63;
	font-weight: bold;
	text-decoration:none;
	}

a:visited {
	color: #555;
	font-weight: bold;
	text-decoration:none;
	}

a:hover {
	color: #fc9;
	font-weight: bold;
	text-decoration:underline;
	}

a:active {
	color: #fc9;
	font-weight: bold;
	text-decoration:underline;
	}

table {
	margin: auto;
	border: 1px solid #ffcc66;
	width: 600px;
	border-spacing: 0;
	}

td, th {
	border: 1px solid #bc7116;
	padding: 5px;
	font-family: Arial, sans-serif;
	}

caption {
	font-family: Verdana, sans-serif;
	font-weight: bold;
	font-size: 1.2em;
	padding-bottom: 5px;
	}

/* class rules
----------------------------*/

.contentimage {
	float: right;
	padding: 8px;
	border: 1px solid #777;
	margin-left: 15px;
	margin-bottom: 15px;
	}

.navoff {
	color: #444;
	background-color: #ccc;
	font-weight: bold;
	text-decoration: none;
	font-size: 1.2em;
	margin: 0;
	padding: 5px 20px;
	border-right: 1px solid #333;
	width: 100px;
	float: left;
	text-align: center;
	}

.clearall {
	clear: both;
	}


/* id rules
----------------------------*/
#nav {
	margin: 0 0 20px 0;	/* margin: T R B L */
	background-color: #ccc;
	border-top: 1px solid #333;
	border-bottom: 1px solid #333;
	width: 100%;
	padding: 0;
	list-style: none;
	float: left;
	}

#nav li {
	display: inline;
	white-space: nowrap;
	}

#nav a:link, #nav a:visited {
	color: #e60;
	background-color: #ddd;
	font-weight: bold;
	text-decoration: none;
	font-size: 1.2em;
	margin: 0;
	padding: 5px 20px;
	border-right: 1px solid #333;
	width: 100px;
	float: left;
	text-align: center;
	}

#nav a:hover {
	text-decoration: none;
	color: #444;
	background-color: #ccc;
	}