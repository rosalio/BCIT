/* html rules
--------------------------------------------*/

body {
	margin: 0;
	background-color: white;
	color: #333;
	font-family: arial, helvetica, sans-serif;
	}

h1 {
	background-color: #ddd;
	padding-top: 20px;
	padding-left: 10px;
	}

h2 {
	background-color: #444;
	color: #ddd;
